  nif:beginIndex "0"^^xsd:nonNegativeInteger;  nif:endIndex "7"^^xsd:nonNegativeInteger;
  nif:sentence <#char=23,60>; # !!! Maybe useful to link to the enclosing sentence
  nif:previousWord <#char=8,15>.
